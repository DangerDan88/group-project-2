<div class="flex flex-col max-w-xs rounded overflow-hidden shadow-lg m-1 items-center justify-between">
  <img class="w-full" src="{{image_url}}" alt="placeholder">
  <div class="px-6 py-4">
    <div class="font-bold text-xl mb-2">{{class}}</div>
    <p class="text-grey-darker text-base mb-2">
      {{description}}
      <ul>
        <li>Health: {{health}}</li>
        <li>Attack: {{attack}}</li>
        <li>Defense: {{defense}}</li>
      </ul>
    </p>
  </div>

  <div class="m-2">
    <button class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded choose-btn" data-id="{{id}}">
      Choose This Hero
    </button>
  </div>
</div>