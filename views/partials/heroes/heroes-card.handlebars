<div
  class="flex flex-col max-w-xs lg:mx-auto rounded overflow-hidden shadow-lg m-1 items-center justify-between bg-gray-500">
  <img class="w-full" src="{{image_url}}" alt="placeholder">
  <div class="px-6 py-4">
    <div class="font-bold text-xl mb-2"> <u>{{class}}</u> </div>
    <p class="text-grey-darker text-base mb-2">
      {{description}}
      <ul>
        <li>Health: {{health}}</li>
        <li>Attack: {{attack}}</li>
        <li>Defense: {{defense}}</li>
      </ul>
    </p>
  </div>

  <div class="m-2">
    <button class="bg-teal-800 hover:bg-teal-600 text-white font-bold py-2 px-4 rounded choose-btn" data-id="{{id}}">
      Choose This Hero
    </button>
  </div>

</div>